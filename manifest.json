{
    "manifest_version": 3,
    "name": "CodeFlow Sync",
    "version": "1.1",
    "description": "Auto-pause YouTube tutorials when you switch to your code editor",
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}