{
    "manifest_version": 3,
    "name": "CodeFlow Sync",
    "version": "1.0",
    "description": "Auto-pause YouTube tutorials when you switch to your code editor",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}